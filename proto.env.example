# Backend environment variables (local demo)
#
# Copy this file to `proto.env` and fill in values.

ENVIRONMENT=development

# App mode (optional)
# - demo: runs without cloud credentials (local in-memory index + deterministic outputs)
# - live: uses Azure/OpenAI/Search/Gemini
# If omitted, the app auto-falls back to demo when required cloud config is missing.
# APP_MODE=demo

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=kkuldanji-mvp-raw
AZURE_STORAGE_PROCESSED_CONTAINER_NAME=kkuldanji-mvp-processed

# Azure Document Intelligence (optional)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
AZURE_DOCUMENT_INTELLIGENCE_KEY=

# Azure AI Search
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_KEY=
AZURE_SEARCH_SERVICE_ENDPOINT=  # optional (often same as AZURE_SEARCH_ENDPOINT)
AZURE_SEARCH_ADMIN_KEY=         # optional (required to create indexes)
AZURE_SEARCH_INDEX_NAME=kkuldanji-mvp

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google Gemini (optional)
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-3-pro-preview

# Key Vault (optional; local demo can leave blank)
KEYVAULT_URL=
